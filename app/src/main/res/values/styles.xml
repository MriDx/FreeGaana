<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MyFullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        //for searchbar
        <!--<item name="android:textColorHint">@color/gray</item>
        <item name="android:editTextColor">@color/white</item>-->

        <item name="android:windowActivityTransitions">true</item>
    </style>



    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor" >@color/gray</item>

        <item name="android:windowBackground">@color/gray</item>

        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:colorButtonNormal">@color/primaryDark</item>
        <item name="android:navigationBarColor">@color/gray</item>

        <!-- animatiions -->
        <item name="android:windowActivityTransitions">true</item>

        <!--<item name="android:navigationBarColor" >@color/yellow</item>-->

    </style>

    <style name="AppTheme.WhiteProgressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.MyFullScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MyFullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.MyFullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
